@article{smithUnderstandingAngiospermDiversification2011,
  title = {Understanding Angiosperm Diversification Using Small and Large Phylogenetic Trees},
  author = {Smith, Stephen A. and Beaulieu, Jeremy M. and Stamatakis, Alexandros and Donoghue, Michael J.},
