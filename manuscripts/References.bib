@article{couvreurGlobalDiversificationTropical2015,
  title = {Global Diversification of a Tropical Plant Growth Form: Environmental Correlates and Historical Contingencies in Climbing Palms},
  shorttitle = {Global Diversification of a Tropical Plant Growth Form},
  author = {Couvreur, Thomas L. P. and Kissling, W. Daniel and Condamine, Fabien L. and Svenning, Jens-Christian and Rowe, Nick P. and Baker, William J.},
