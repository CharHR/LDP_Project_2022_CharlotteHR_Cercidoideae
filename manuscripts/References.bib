@article{cruzMolecularPhylogenyCharacter2017,
  title = {Molecular Phylogeny, Character Evolution and Historical Biogeography of {{Cryptanthus Otto}} \& {{A}}. {{Dietr}}. ({{Bromeliaceae}})},
  author = {Cruz, Geyner A. S. and Zizka, Georg and Silvestro, Daniele and Leme, Elton M. C. and Schulte, Katharina and {Benko-Iseppon}, Ana M.},
