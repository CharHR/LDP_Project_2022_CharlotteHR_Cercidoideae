  file = {/Users/charlotteolivia/Zotero/storage/9P6TIRQW/Gentry - 1992 - The distribution and evolution of climbing plants.pdf;/Users/charlotteolivia/Zotero/storage/XQIE37MW/261196010092F4F59A66716FB56B6B5A.html}
